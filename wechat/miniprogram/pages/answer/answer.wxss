/**answer.wxss**/
.answer-container {
    padding: 0;
    font-size: 14rpx;
    background: #F0F4F3;
    color: #000;
}

.question {
    position: relative;
    width: 750rpx;
    padding: 40rpx 50rpx 30rpx;
    background: #F5DC67;
    color: #fff;
    font-size: 38rpx;
    line-height: 48rpx;
}
.answerer-wrp{
    position: relative;
    width: 750rpx;
    height: 190rpx;
    background: #fff;
}
.answerer-wrp .bg-half{
    position: absolute;
    top: 0;
    width: 750rpx;
    height: 75rpx;
    background: #F5DC67;
    border-radius: 0 0 40rpx 40rpx ;
}

.answerer {
    position: relative;
    margin: 0 auto;
    width: 630rpx;
    height: 190rpx;
    padding: 30rpx;
    background: #fff;
    border: solid 1px #ebebeb;
    border-radius: 10px;
    box-shadow: 0 1px 2px #bebebe;
}
.answerer .avatar {
    flex: 1;
    width: 90rpx;
    height: 90rpx;
    margin: auto;
}

.answerer .avatar image {
    display: inline-block;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
}
.answerer .answerer-info{
    margin: auto;
    flex: 5;
    text-align: left;
    line-height: 35rpx;
    padding: 0 10rpx;
}
.answerer .answerer-info text{
    display: block;
}
.answerer .answerer-info .answerer-name{
    font-size: 36rpx;
}
.answerer .answerer-info .answerer-des{
    font-size: 22rpx;
    color: #808080;
    line-height: 28rpx;
}
.answerer .answerer-info .activity-des{
    font-size: 22rpx;
    color: #808080;
    line-height: 28rpx;
}
.answerer .follow{
    flex: 2;
    padding:  0;
    font-size: 20rpx;
    margin: auto;
}
.answerer .follow text{
    display: inline-block;
    padding: 15rpx 20rpx;
    color: #40bcd0;
    border: solid 2px #D6EAD4;
    border-radius: 6rpx;
}
.answer-content{
    padding: 80rpx 40rpx;
    background: #ffffff;
    margin-bottom: 100rpx;
}
.answer-content text{
    font-size: 32rpx;
    color: #454545;
    line-height: 44rpx;
}
.answer-content image{
    width: 100%;
    margin: 20rpx 0;
}
.answer-footer{
    position: fixed;
    bottom: 0;
    height: 100rpx;
    border-top: solid 1px #ebebeb;
    background: #ffffff;
    width: 750rpx;
    padding: 20rpx 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.answer-footer .read-c{
    flex: 1;
    /*display: inline-block;*/
    height: 40rpx;
    border: solid 1px #d1d1d1;
    border-radius: 3px;
    padding: 10rpx 8rpx;
    margin: 10rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
.answer-footer .read-c .read{
    display: flex;
}
.answer-footer .read-c image{
    display: flex;
    width: 38rpx;
    height: 38rpx;
    vertical-align: middle;
}
.answer-footer .read-c .read-num{
    display: flex;
    padding: 10rpx 10rpx;
    font-size: 20rpx;
    color: #989898;
}
.answer-footer .operation-wrp{
    flex: 5;
}
.answer-footer .operation{
    justify-content: space-between;
    padding: 0 0 0 120rpx;
}
.answer-footer .operation-btn{
    flex: 1;
    text-align: center;
}
.answer-footer .operation image{
    display: block;
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
}
.answer-footer .operation-btn text{
    display: block;
    font-size: 20rpx;
    color: #bebebe;
}
